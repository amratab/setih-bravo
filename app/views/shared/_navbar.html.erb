                    </div>
                </li>

            <% else  %>

                <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, :class => "nav-item nav-link" %>
                </li>
                <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-outline-success" %>

                <% end %>
            </ul>
        </div>
    </nav>
</header>
