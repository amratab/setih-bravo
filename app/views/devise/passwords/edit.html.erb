
<%= devise_error_messages! %>

<div class="col-md-4 offset-md-4">
    <div class="card ninja-card">
        <div class="card-block">
            <h3 class="card-title text-center">Change your password</h3>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field form-group">
                <%= f.label :password, "New password" %><br/>
                <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "btn btn-primary btn-lg btn-block" %>
            </div>

            <div class="field form-group">
                <%= f.label :password_confirmation, "Confirm new password", :class => "btn btn-primary btn-lg btn-block" %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "btn btn-primary btn-lg btn-block" %>
            </div>

            <div class="field form-group">
                <%= f.submit "Change my password" %>
            </div>
            <% end %>

            <div class="text-center" style="padding-top: 10px">
                <%= render "devise/shared/links" %>
            </div>

        </div>
    </div>
</div>
